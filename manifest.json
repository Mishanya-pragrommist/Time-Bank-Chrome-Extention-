{
    "manifest_version": 3,
    "name": "Банк времени",
    "description": "Расширение, упрощающее контроль времени в соцсетях",
    "version": "1.0.0",
    
    "icons": {
        "32": "images/icon 32px.png",
        "64": "images/icon 64px.png",
        "128": "images/icon 128px.png",
        "256": "images/icon 256px.png"
    },
    "action": {
        "default_popup": "html/main.html"
    },
    "permissions": [
        "tabs",
        "notifications",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "js/background.js"
    }
}